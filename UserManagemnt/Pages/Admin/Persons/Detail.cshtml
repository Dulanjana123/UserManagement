@page
@model UserManagemnt.Pages.Admin.Persons.DetailModel
@{
}

<div class="form-content">
    <div class="inner-form">

        <h1><i class="far fa-plus-square"></i> Detail: Person</h1>
        <hr />

    <partial name="_Notification">

    @if(Model.person != null)
    {

          <form method="post">
            <div class="row">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label for="id"  class="control-label">Id</label>
                        <input type="text" class="form-control" id="id" asp-for="person.Id" readonly/>
                    </div>

                    <div class="form-group">
                        <label for="firstName"  class="control-label">First Name</label>
                        <input type="text" class="form-control" id="firstName" asp-for="person.FirstName" />
                    </div>

                    <div class="form-group">
                        <label for="lastName"  class="control-label">Last Name</label>
                        <input type="text" class="form-control" id="lastName" asp-for="person.LastName" />
                    </div>

                    <div class="form-group">
                        <label for="mobile"  class="control-label">Mobile</label>
                        <input type="text" class="form-control" id="mobile" asp-for="person.Mobile" />
                    </div>

                    <div class="form-group">
                        <label for="email"  class="control-label">Email</label>
                        <input type="email" class="form-control" id="email" asp-for="person.Email" />
                    </div>


                    <div class="form-group">
                        <a asp-page="List" class="button button-info"><i class="fas fa-chevron-circle-left"></i> Back to List</a>
                    </div>

                    
                </div>

                <div class="col-6">
                    
                    <div class="form-group">
                        <label for="sSN"  class="control-label">SSN</label>
                        <input type="text" class="form-control" id="sSN" asp-for="person.SSN"/>
                    </div>

                    <div class="form-group">
                        <label for="dOB"  class="control-label">Date Of Birth</label>
                        <input type="date" class="form-control" id="dOB" asp-for="person.DOB"/>
                    </div>

                    <div class="form-group">
                        <label for="address"  class="control-label">Address</label>
                        <input type="text" class="form-control" id="address" asp-for="person.Address"/>
                    </div>

                    <div class="form-group">
                        @if (Model.person.ProfileImageUrl != null)
                        {
                            <label class="control-label">Profile Image:</label>
                            <br/>
                            <img src="@Model.person.ProfileImageUrl" id="profileImageDisplay" style="width:200px;height:auto;"  />
                        }
                        else
                        {
                             <label class="control-label" style="display:none;">Profile Image:</label>
                             <br/>
                             <img src="" id="profileImageDisplay" style="display:none; width:200px;height:auto;"  />
                        }
                    </div>
                </div>

            </div>
          </form>

    }
    else
    {
        <div class="container">
            <p>Person Not Found!</p>
        </div>
    }
    </div>
</div>
    

