@page
@model UserManagemnt.Pages.Admin.Persons.AddModel
@{
}

@{
    ViewData["Title"] = "Create";
}


<div class="form-content">
    <div class="inner-form">

    <h1><i class="far fa-plus-square"></i> Create: Person</h1>
    <hr />
       <form method="post">
        <div class="row">
            <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label for="firstName"  class="control-label">First Name</label>
                        <input type="text" class="form-control" id="firstName" asp-for="AddPersonRequest.FirstName" required/>
                    </div>

                    <div class="form-group">
                        <label for="lastName"  class="control-label">Last Name</label>
                        <input type="text" class="form-control" id="lastName" asp-for="AddPersonRequest.LastName" required/>
                    </div>

                    <div class="form-group">
                        <label for="mobile"  class="control-label">Phone</label>
                        <input type="text" class="form-control" id="mobile" asp-for="AddPersonRequest.Phone" required/>
                    </div>

                    <div class="form-group">
                        <label for="email"  class="control-label">Email</label>
                        <input type="email" class="form-control" id="email" asp-for="AddPersonRequest.Email" required/>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="button button-primary">
                            <span><i class="far fa-plus-square"></i> 
                                Create
                            </span>
                        </button>

                        <button type="reset" class="button button-danger">
                            <span><i class="far fa-minus-square"></i> 
                                Reset
                            </span>
                        </button>

                        <a asp-page="List" class="button button-info">
                            <i class="fas fa-chevron-circle-left"></i> 
                            Back to List
                        </a>
                    </div>
            </div>

            <div class="col-6">
                 <div class="">
                    <div class="form-group">
                        <label for="sSN"  class="control-label">SSN</label>
                        <input type="text" class="form-control" id="sSN" asp-for="AddPersonRequest.SSN" required/>
                    </div>

                    <div class="form-group">
                        <label for="dOB"  class="control-label">Date Of Birth</label>
                        <input type="date" class="form-control" id="dOB" asp-for="AddPersonRequest.DOB" required/>
                    </div>

                    <div class="form-group">
                        <label for="address"  class="control-label">Address</label>
                        <input type="text" class="form-control" id="address" asp-for="AddPersonRequest.Address" required/>
                    </div>

                    <div class="form-group">
                        <label for="profileImageUpload"  class="control-label">Profile Image Upload</label>
                        <input type="file" id="profileImageUpload" asp-for="profileImage" required/>
                        <img src="" id="profileImageDisplay" style="display:none; width:200px;height:auto;"  />
                    </div>

                    <div class="form-group" style="display:none;">
                        <label for="profileImageUrl"  class="control-label">Profile Image Url</label>
                        <input type="text" class="form-control" id="profileImageUrl" asp-for="AddPersonRequest.ProfileImageUrl" style="display:none;" required/>
                    </div>
                </div>
            </div>
        </div>
       </form>
    </div>
</div>


@section Scripts {
    <script>

        const profileImageUploadElement = document.getElementById('profileImageUpload');
        const profileImageUrl = document.getElementById('profileImageUrl');
        const profileImageDisplay = document.getElementById('profileImageDisplay');

        async function uploadProfileImage(e) {
            console.log(e.target.files[0]);
            
            let data = new FormData();
            data.append('file', e.target.files[0]);

            await fetch('/api/images', {
                method: 'POST',
                headers: {
                    'Accept': '*/*',
                },
                body: data
            }).then(response => response.json())
                .then(result => {
                    profileImageUrl.value = result.link;
                    profileImageDisplay.style.display = 'block';
                    profileImageDisplay.src = result.link;
                });
        }

        profileImageUploadElement.addEventListener('change', uploadProfileImage);

    </script>
}
       